<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:id="@+id/view">

    <ImageView
        android:id="@+id/imageViewAnak"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/foto_anak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewNamaAnak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        style="@style/SmallHeader"
        android:text="@string/nama_anak"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewAnak"
        app:layout_constraintTop_toTopOf="@+id/imageViewAnak" />

    <TextView
        android:id="@+id/textViewTglLahirAnak"
        style="@style/Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="11dp"
        android:text="@string/tgl_lahir"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewAnak"
        app:layout_constraintStart_toEndOf="@id/imageViewAnak"
        app:layout_constraintTop_toBottomOf="@id/textViewNamaAnak" />



</androidx.constraintlayout.widget.ConstraintLayout>